		"physics": {
			"3sig": {
				"regex": "\\d{3}|\\d\\.\\d{2}|\\.\\d{3}",
				"postest": ["132", "1.23", "12.3", ".123"],
				"negtest": ["1234", "12.45", ".9919"],
			},
			"mass": {
				"regex": "kg|kilo|kilogram",
				"postest": ["kg", "kilo", "kilos"],
				"negtest": ["f", "kilog"]
			},
			"massqty": "[:3sig:][:mass:]"
		},
